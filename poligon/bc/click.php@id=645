    $(document).ready(function () {
        $('.row').each(function () {
            var highestBox = 0;
            $('.card-body-flex', this).each(function () {
                if ($(this).height() > highestBox) {
                    highestBox = $(this).height();
                }
            });
            $('.card-body-flex', this).height(highestBox);
        });
    });
</script>
