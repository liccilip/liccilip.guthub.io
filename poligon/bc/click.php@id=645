<script>


    setInterval(function () {

        if ($('#sum').val() > 0) {
            change_trans();
            change_trans2();
        }

    }, 5000); // 1000 м.сек


    $(function () {
        $('#cbx').on('change', function () {
            if ($('#cbx').prop('checked')) {
                $('#light').val(1);
                change_trans2();
            } else {
                $('#light').val(0);
                change_trans2();
            }
        });
    });


    function change_method() {

        if ($('#pay_methods2').val() == 16) {
            $('#img_methods2').html('<img class="icon" src="/application/views/site/img/sepa_icon.png"/>');

            //      $('#light_show').show();

        }

        if ($('#pay_methods2').val() == 24) {
            $('#img_methods2').html('<img class="icon" src="/application/views/site/img/perfect_icon.png"/>');


            //       $('#light').val(0);
            //      $('#light_show').hide();
            //       $("#cbx").removeAttr('checked');
        }

        if ($('#pay_methods2').val() == 26) {
            $('#img_methods2').html('<img class="icon" src="/application/views/site/img/adv_icon.png"/>');


            //       $('#light').val(0);
            //      $('#light_show').hide();
            //       $("#cbx").removeAttr('checked');
        }

        if ($('#pay_methods2').val() == 27) {
            $('#img_methods2').html('<img class="icon" src="/application/views/site/img/card_icon.png"/>');

        }

        change_trans2();


    }


    function change_trans() {

        if ($('#pay_methods').val() == 2) {


            $('#img_methods').html('<img class="icon" src="/application/views/site/img/card_icon.png"/>');


        }

        if ($('#pay_methods').val() == 12) {


            $('#img_methods').html('<img class="icon" src="/application/views/site/img/sepa_icon.png"/>');


        }

        if ($('#pay_methods').val() == 17) {


            $('#img_methods').html('<img class="icon" src="/application/views/site/img/epay1_icon.png"/>');


        }
        if ($('#pay_methods').val() == 10) {


            $('#img_methods').html('<img class="icon" src="/application/views/site/img/adv_icon.png"/>');


        }
        if ($('#pay_methods').val() == 22) {


            $('#img_methods').html('<img class="icon" src="/application/views/site/img/payeer_icon.png"/>');


        }
        if ($('#pay_methods').val() == 23) {


            $('#img_methods').html('<img class="icon" src="/application/views/site/img/perfect_icon.png"/>');


        }

        $.ajax({
            type: "GET",
            url: '/ajax/change_trans' + '?from=' + $('#from').val() + '&to=' + $('#to').val() + '&pay_methods=' + $('#pay_methods').val() + '&sum=' + $('#sum').val(),
            dataType: 'json',
            cache: false,
            contentType: false,
            processData: false,

            success: function (data) {
                $('#sum_res').val(data.sum_res.toFixed(5));
                $('#sum_in').val(data.sum);
                $('#pay_methods_com').html(data.pay_methods_com);
                $('#valut_com').html(data.valut_com);
                $('#metod1').html(data.metod_name);

                $('#limit').html(data.metod_limit);
                if ($('#from').val() == 7) {
                    $('#limit').html(730000);
                } else if ($('#from').val() == 15) {
                    $('#limit').html(320000);
                } else if ($('#from').val() == 20) {
                    $('#limit').html(5500000);
                } else if ($('#from').val() == 21) {
                    $('#limit').html(32000);
                } else if ($('#from').val() == 22) {
                    $('#limit').html(4200000);
                } else if ($('#from').val() == 14) {
                    $('#limit').html(8800);
                }


                $('#reserv').html(data.reserv);
// console.log(data);
            }
        });
    }

    function setvalut(id, name) {
        $('.valut1').html(name);
        $('#from').val(id);
        change_trans();
        if ($('#from').val() == 7) {
            $('#min_lim').html(4000);
        } else if ($('#from').val() == 15) {
            $('#min_lim').html(1800);
        } else if ($('#from').val() == 20) {
            $('#min_lim').html(28000);
        } else if ($('#from').val() == 21) {
            $('#min_lim').html(125);
        } else if ($('#from').val() == 22) {
            $('#min_lim').html(21400);
        } else {
            $('#min_lim').html(50);
        }
    }

    function setvalut2(id, name) {
        $('#to').val(id);
        $('.valut2').html(name);
        change_trans();
    }

    function initcalc() {
        buy = 1;
        valut = 3;
        idi = 1;
        $('#sel_valut3').val(2).change();
        change_trans();


    }

    function setvalut21(id, name) {
        $('.valut22').html(name);
        $('#to2').val(id);
        change_trans2();
    }

    function setvalut22(id, name) {
        $('.valut21').html(name);
        $('#from2').val(id);
        change_trans2();
        if ($('#from2').val() > 3) {
            $('#light_show').hide();
            $("#cbx").removeAttr('checked');

        } else {

            $('#light_show').show();

        }
    }

    function change_trans2(type = 0) {

        var cryp_cash = $('#sel_valut2').val();
        if (cryp_cash == 3) {


            $('#crypto_text').show();
            $('#light_show').show();
        }
        if (cryp_cash == 4) {

            $('#light').val(0);
            $('#light_show').hide();
            $("#cbx").removeAttr('checked');
        }
        if (cryp_cash == 5) {

            $('#light').val(0);
            $('#light_show').hide();
            $("#cbx").removeAttr('checked');
        }
        if (cryp_cash == 6) {

            $('#light').val(0);
            $('#light_show').hide();
            $("#cbx").removeAttr('checked');
        }
        if (cryp_cash == 8) {

            $('#light').val(0);
            $('#light_show').hide();
            $("#cbx").removeAttr('checked');
        }
        if (cryp_cash == 10) {

            $('#light').val(0);
            $('#light_show').hide();
            $("#cbx").removeAttr('checked');
        }
        if (cryp_cash == 12) {

            $('#light').val(0);
            $('#light_show').hide();
            $("#cbx").removeAttr('checked');
        }
        if (cryp_cash == 13) {

            $('#light').val(0);
            $('#light_show').hide();
            $("#cbx").removeAttr('checked');
        }
        if (cryp_cash == 18) {

            $('#light').val(0);
            $('#light_show').hide();
            $("#cbx").removeAttr('checked');
        }
        if (cryp_cash == 19) {

            $('#light').val(0);
            $('#light_show').hide();
            $("#cbx").removeAttr('checked');
        }


        $.ajax({
            type: "GET",
            url: '/ajax/change_trans_btc' + '?from=' + $('#from2').val() + '&to=' + $('#to2').val() + '&pay_methods=' + $('#pay_methods2').val() + '&sum=' + $('#sum2').val() + '&light=' + $('#light').val(),
            dataType: 'json',
            cache: false,
            contentType: false,
            processData: false,

            success: function (data) {
                if (type == 0) $('#sum_res2').val(data.sum_res.toFixed(2));
                $('#sum_in2').val(data.sum);
                $('#pay_methods_com2').html(data.pay_methods_com);
                $('#valut_com2').html(data.valut_com);
                //$('#sum_min2').val(data.sum_min.toFixed(5));
                //$('#sum_max2').val(data.sum_max.toFixed(5));
                document.getElementById("sum_min2").innerHTML = (data.sum_min.toFixed(5));
                document.getElementById("sum_max2").innerHTML = (data.sum_max.toFixed(5));
                document.getElementById("reserv_btc2").innerHTML = (data.reserv_btc);
                // $('#reserv_btc2').val(data.reserv_btc);
                $('#metod2').html(data.metod_name);
                $('#sum_res_nocom2').val(data.sum_res_nocom);


                // console.log(data);
            }
        });
    }


    setTimeout(initcalc, 500);
    // setTimeout(change_trans2,3000);
    // setTimeout(change_trans,1000);


    //   setInterval(function(){


    //            ajax('valut_rates','type=1','#valut_rates');


    //    }, 5000);

    window.onload = function () {
        ajax('valut_rates', 'type=1', '#valut_rates');

    }


</script>


