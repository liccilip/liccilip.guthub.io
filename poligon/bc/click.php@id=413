<script type="text/javascript">
    // Cources data
    var arrCurrency = new Array();
    var arrCurrencyT = new Array();
    
        arrCurrency[0]  = 'wme';
    arrCurrencyT[0] = 'WME';
        arrCurrency[1]  = 'wmr';
    arrCurrencyT[1] = 'WMR';
        arrCurrency[2]  = 'wmu';
    arrCurrencyT[2] = 'WMU';
        arrCurrency[3]  = 'wmz';
    arrCurrencyT[3] = 'WMZ';
        
    // Cources data
    var arrFromCources = new Array();
    var arrToCources = new Array();
    
        arrFromCources['bankwire2wmz'] = '1.000';
    arrToCources['bankwire2wmz'] = '0.9850';
        arrFromCources['wme2wmr'] = '1.000';
    arrToCources['wme2wmr'] = '65.1000';
        arrFromCources['wme2wmu'] = '1.000';
    arrToCources['wme2wmu'] = '28.1000';
        arrFromCources['wme2wmz'] = '1.000';
