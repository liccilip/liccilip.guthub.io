        arrFromCources['wmz2wmu'] = '1.000';
    arrToCources['wmz2wmu'] = '27.5000';
    
    

    // Balances data
    var arrBalances = new Array();
    
        arrBalances['wme'] = '0.00';
        arrBalances['wmr'] = '797.43';
        arrBalances['wmu'] = '0.71';
        arrBalances['wmz'] = '106.72';
        
    // Titles data
    var arrTitles = new Array();
    
        arrTitles['wme'] = 'WME';
        arrTitles['wmr'] = 'WMR';
        arrTitles['wmu'] = 'WMU';
        arrTitles['wmz'] = 'WMZ';
        

    arrTitles['bankwire'] = 'WireUSD';
    arrBalances['bankwire'] = '0';

    // Function for show cource
    function onChangeIoForm() {
        // Input select
        var oInSel = document.forms['io_form']['in_sel'];
        var nInInd = oInSel.selectedIndex;
        var sInOpt = oInSel.options[nInInd].value;

        // Output select
        var oOutSel = document.forms['io_form']['out_sel'];
        var sOutOpt = $(oOutSel).val();

        if (sInOpt == "other") {
            $(oOutSel).hide();
            $('#rep_form').hide();
            $('#nextbut').show();
            $('#_go_button').show();
            $('#_go_button').click(function () {
                //document.location = '/module.php?name=imdex';
                document.location = '/module.php?name=index';
            });
            return;
        }
        else {
            $('#_go_button').click(redirConvertPage);
            $(oOutSel).show();
            $('#rep_form').show();
            $('#nextbut').hide();
        }

        // Converter name
        var sConvert = sInOpt + '2' + sOutOpt;
        //alert("'"+sConvert+"'");

        document.getElementById('_go_button').style.display = 'inline';
        document.getElementById('upbutton').style.display = 'inline';
        document.getElementById('addinfo').innerHTML = '<center></center>';

        if ( ///^wm[z|r|u|e]2yandex$/.test(sConvert) ||
        ///^yandex2wm[z|r|u|e]$/.test(sConvert) ||
        /^wm[z|r|u|e]2mml$/.test(sConvert) ||
        /^mml2wm[z|r|u|e]$/.test(sConvert) ||
            ///^rbk2wm[z|r|u|e]$/.test(sConvert) ||
            ///^wm[z|r|u|e]2rbk$/.test(sConvert) ||
        /^wm[z|r|u|e]2wone$/.test(sConvert) ||
        /^wone2wm[z|r|u|e]$/.test(sConvert)
        ) {
            document.getElementById('upbutton').style.display = 'none';
            document.getElementById('_go_button').style.display = 'none';
            document.getElementById('addinfo').innerHTML = '<center>Обмен в данном направлении запрещен</center>';
        }

        // Show balance
        var oTxtBalance = document.forms['rep_form']['txt_balance'];
        if (sInOpt === "bankwire") {
            oTxtBalance.value = arrBalances[sInOpt] + ' ' + arrTitles[sInOpt];
        } else {
            oTxtBalance.value = arrBalances[sOutOpt] + ' ' + arrTitles[sOutOpt];
        }

        // Show cource
        var oTxtCource = document.forms['rep_form']['txt_cource'];
        oTxtCource.value = arrFromCources[sConvert] + ' ' + arrTitles[sInOpt] + ' = ' + arrToCources[sConvert] + ' ' + arrTitles[sOutOpt];
        
        bankwire();
    }
    // Function for redirect to converter page
    function redirConvertPage() {
        // Input select
        var oInSel = document.forms['io_form']['in_sel'];
        var nInInd = oInSel.selectedIndex;
        var sInOpt = oInSel.options[nInInd].value;
        // Output select
        var oOutSel = document.forms['io_form']['out_sel'];
        var nOutInd = oOutSel.selectedIndex;
        var sOutOpt = oOutSel.options[nOutInd].value;
        // Converter name
        var sConvert = sInOpt + '2' + sOutOpt;
        // Redirecting...
        document.location = 'convert.php?name=' + sConvert;
    }
    // Function for updatind this page
    function updateThisPage() {
        // Input select
        var oInSel = document.forms['io_form']['in_sel'];
        var nInInd = oInSel.selectedIndex;
        var sInOpt = oInSel.options[nInInd].value;
        // Output select
        var oOutSel = document.forms['io_form']['out_sel'];
        var nOutInd = oOutSel.selectedIndex;
        var sOutOpt = oOutSel.options[nOutInd].value;
        // Redirecting...
        document.location = 'module.php?name=index&in_sel=' + sInOpt + '&out_sel=' + sOutOpt;
    }
    // Function for make output list
    function MakeOutList(strCmd) {
        var type = 'in';
        var rtype;
        if (type == 'in')rtype = 'out';
        if (type == 'out')rtype = 'in';
        // Get input select value
        var oInSel = document.forms['io_form'][type + '_sel'];
        var nInInd = oInSel.selectedIndex;
        var sInOpt = oInSel.options[nInInd].value;
        if (strCmd == 'false') {
            var oOutSel = document.forms['io_form'][rtype + '_sel'];
            var nOutInd = oOutSel.selectedIndex;
            strCmd = oOutSel.options[nOutInd].value;
        }
        // Make output select value

        var strCode = '';
        if (type === "out") {
            strCode = '<option value="bankwire">WireUSD</option>';
        }
        for (var i = 0; i < arrCurrency.length; i++) {
            //alert(sConvert);
            if (arrCurrency[i] != sInOpt) {
                if (type == 'in')
                    var sConvert = sInOpt + '2' + arrCurrency[i];
                else if (type == 'out')
                    var sConvert = arrCurrency[i] + '2' + sInOpt;

                if (/mml|wone|rbk/.test(sConvert)) {
                    continue;
                }
                else {             
                    if (strCmd != 'false') {
                        if (arrCurrency[i] == strCmd) {
                            strCode += '<option value="' + arrCurrency[i] + '" selected>' + arrCurrencyT[i] + '</option>';
                        }
                        else {
                            strCode += '<option value="' + arrCurrency[i] + '">' + arrCurrencyT[i] + '</option>';
                        }
                    }
                    else {
                        strCode += '<option value="' + arrCurrency[i] + '">' + arrCurrencyT[i] + '</option>';
                    }
                }
            }
        }
        if (strCode == '') {
            strCode = '<option></option>';
        }
        $("#" + rtype + '_sel').html(strCode);
        $("#" + rtype + "_sel [value='" + strCmd + "']").attr("selected", "selected");
        onChangeIoForm();
    }

    function MakeOutOrInList(strCmd, type) {
        var rtype;
        if (type == 'in')rtype = 'out';
        if (type == 'out')rtype = 'in';
        // Get input select value
        var oInSel = document.forms['io_form'][type + '_sel'];
        var nInInd = oInSel.selectedIndex;
        var sInOpt = oInSel.options[nInInd].value;
        if (strCmd == 'false') {
            var oOutSel = document.forms['io_form'][rtype + '_sel'];
            var nOutInd = oOutSel.selectedIndex;
            strCmd = $(oOutSel).val();
        }
        // Make output select value

        var strCode = '';
        if (type === "out") {
            strCode = '<option value="bankwire">WireUSD</option>';
        }
        for (var i = 0; i < arrCurrency.length; i++) {

            //alert(sConvert);
            if (arrCurrency[i] != sInOpt) {
                if (type == 'in')
                    var sConvert = sInOpt + '2' + arrCurrency[i];
                else if (type == 'out')
                    var sConvert = arrCurrency[i] + '2' + sInOpt;

                if (/mml|wone|rbk/.test(sConvert)) {
                    continue;
                }
                else {                  
                    if (strCmd != 'false') {
                        if (arrCurrency[i] == strCmd) {
                            strCode += '<option value="' + arrCurrency[i] + '" selected>' + arrCurrencyT[i] + '</option>';
                        }
                        else {
                            strCode += '<option value="' + arrCurrency[i] + '">' + arrCurrencyT[i] + '</option>';
                        }
                    }
                    else {
                        strCode += '<option value="' + arrCurrency[i] + '">' + arrCurrencyT[i] + '</option>';
                    }                  
                }
            }
        }
        if (type == "out") {
            //strCode += '<option value="other">Обменять другие валюты</option>';
        }

        if (strCode == '') {
            strCode = '<option></option>';
        }

        $("#" + rtype + '_sel').html(strCode);
        $("#" + rtype + "_sel [value='" + strCmd + "']").attr("selected", "selected");
        onChangeIoForm();
    }
</script>
    <script type="text/javascript">
        function CheckConvForm() {
            if (document.forms['convfrm']['name'].value != 0) {
                return true;
            }
            alert('Пожалуйста, выберете в списке наиболее подходящий Вам вариант обмена!');
            return false;
        }
    </script>
    <script type="text/javascript">
        function showkurs(val) {
            obj = document.getElementById('rezerv');
            if (val == 'SMS') {
                obj.style.display = "none";
                document.getElementById('upbutton').style.display = 'none';
                document.getElementById('addinfo').innerHTML = '<center>При нажатии на кнопку "Далее",   Вы будете переадресованы на сервис обмена SMS: www.cmc2web.com</center>'
            }
            else {
                obj.style.display = "block";
                document.getElementById('upbutton').style.display = 'inline';
                document.getElementById('addinfo').innerHTML = ''
            }
            onChangeIoForm();
        }
        function bankwire()
        {
            var s1 = $('#in_sel').val();
            if (s1 === "bankwire") {
                $('#out_sel').find('option').each(function(i,o){
                    if ($(o).attr('value') === "wmz") {
                        $(o).attr('selected', 'selected');
                    }
                    else {
                        $(o).remove();
                    }
                });
            }
        }
    </script>



