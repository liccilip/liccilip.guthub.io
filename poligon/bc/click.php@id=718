<script src="/assets/1a07eeb7/jquery.js"></script>
<script src="/assets/74a2b5c0/yii.js"></script>
<script src="/js/jquery.validate.min.js"></script>
<script src="/assets/757c41b6/js/bootstrap.js"></script>
<script>jQuery(function ($) {

    
    function searchInspections() {
        $.ajax({
            url: "/site/form",
            type: "GET",
            data: {
                source_currency_id: $(".source-currency.faq-q-selected")[0].getAttribute("export-code"),
                target_currency_id: $(".target-currency.faq-q-selected")[0].getAttribute("export-code"),
            },
            success: function(data) {
                $("#exchange-form").html(data);
            }
        });
    }
    
    function searchAvailableCurrencies() {
        $.ajax({
            url: "/exchange-rate/available-currencies",
            type: "GET",
            data: {
                id: $(".source-currency.faq-q-selected")[0].getAttribute("currency-id"),
            },
            success: function(data) {
                var availableCurrencies = JSON.parse(data);
                $(".faq-q-disabled").each(function( index ) {
                    if (availableCurrencies.indexOf($(this).attr("currency-id")) !== -1) {
                        $(this).removeClass("faq-q-disabled");
                        $(this).addClass("faq-q");
                    }
                });
                
            }
        });
    }
    
    $(".source-currency.currency-type").on("click", function (e) {
        var replacementElement = $(this).clone();
        replacementElement.removeClass("currency-type");
        replacementElement.removeClass("faq-q");
        replacementElement.addClass("faq-q-selected");
        $(".source-currency.faq-q-selected").replaceWith(replacementElement[0].outerHTML);
        searchAvailableCurrencies();
    });
    
    
    
    $(".source-currency").on("click", function (e) {
        if (!$(this).hasClass("currency-type")) {
            $(".target-currency.faq-q-selected").addClass("faq-q-disabled");
            $(".target-currency.faq-q-selected").removeClass("faq-q-selected");
            $(".target-currency.faq-q").addClass("faq-q-disabled");
            $(".target-currency.faq-q").removeClass("faq-q");
            
            $(".source-currency.faq-q-selected").addClass("faq-q");
            $(".source-currency.faq-q-selected").removeClass("faq-q-selected");
            $(this).removeClass("faq-q");
            $(this).addClass("faq-q-selected");
            searchAvailableCurrencies();
        }
        
    });
    
    $(".target-currency.currency-type").on("click", function (e) {
        if ($(this).hasClass("faq-q")) {
            var replacementElement = $(this).clone();
            replacementElement.removeClass("currency-type");
            replacementElement.removeClass("faq-q");
            replacementElement.addClass("faq-q-selected");
            $(".target-currency.faq-q-selected").replaceWith(replacementElement[0].outerHTML);
            searchInspections();
        }
    });
    
    $(".target-currency").on("click", function (e) {
        if ($(this).hasClass("faq-q") && !$(this).hasClass("currency-type")) {
            $(".target-currency.faq-q-selected").addClass("faq-q");
            $(".target-currency.faq-q-selected").removeClass("faq-q-selected");
            $(this).removeClass("faq-q");
            $(this).addClass("faq-q-selected");
            searchInspections();
        }
    });
    
    

});</script></body>
