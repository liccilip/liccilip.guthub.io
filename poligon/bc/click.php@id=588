		    <link href="/noty/lib/noty.css" rel="stylesheet" />
<script src="/noty/lib/noty.js" type="text/javascript"></script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/socket.io/2.0.3/socket.io.js"></script>
<script>
var orders = getCookie('orders');

$(document).ready(function () {

	var themeOption = 'bootstrap-v4';

	var notyOptions = {
		theme: themeOption,
		progressBar: true,
		closeWith: ['click', 'button'],
		animation: {
	        open : 'animated fadeInDownBig slower',
	        close: 'animated fadeOutUpBig slower'
	    },
	};

	var socket = io.connect('//node.7money.co/', {secure: true});
 
	socket.on('connect', function () {
		if (orders) {
			socket.emit('orders', orders);
		}
		//console.log('Connected success');
	});

	socket.on('alert', function (data) {

		var typeOption = 'alert';
		var layoutOption = 'topRight';

		var text = '';

		switch (data.event) {
			case 'message':
				typeOption = 'info';
				text = data.text_ru;
				break;
			case 'good_night':
				typeOption = 'warning';
				text = "Спокойной ночи, уважаемые клиенты нашего сервиса!";
				break;
			case 'good_morning':
				typeOption = 'warning';
				text = "Доброе утро, уважаемые клиенты нашего сервиса!";
				break;
			case 'maintenance':
				typeOption = 'warning';
				text = "Просим прощения, но на сайте ведутся срочные технические работы. Просим вас не беспокоиться если что-то пойдёт не так, это временно:)";
				break;
			case 'delay':
				typeOption = 'warning';
				text = "В данный момент возможна задержка выплат на срок до 5-ти минут, извините за неудобство...";
				break;
			case 'ddos':
				typeOption = 'warning';
				text = "В данный момент наш сервис подвергается DDOS-атаке! Просим прощения за недоступность нашего сервиса...";
				break;
			default: break;
		}

		new Noty($.extend({}, notyOptions, {
			type: typeOption,
			layout: layoutOption,
			text: text,
			timeout: 15000,
		})).show();
	});

	socket.on('currency', function (data) {

		var typeOption = 'alert';
		var layoutOption = 'topRight';

		var text = '';

		switch (data.event) {
			case 'change_balance':
				typeOption = 'info';
				text = 'Баланс валюты "{name}" изменился на "{balance}"';
				break;
			case 'enabled':
				typeOption = 'warning';
				text = 'Валюта "{name}" только что стала доступна для обмена!';
				break;
			case 'disabled':
				typeOption = 'warning';
				text = 'Валюта "{name}" только что стала не доступной для обмена!';
				break;
			default: break;
		}
		text = text.replace('{name}', data.name_ru);
		text = text.replace('{balance}', data.balance);

		new Noty($.extend({}, notyOptions, {
			type: typeOption,
			layout: layoutOption,
			text: text,
			timeout: 15000,
		})).show();
	});

	socket.on('order', function (data) {
		var typeOption = 'alert';
		var layoutOption = 'bottomLeft';

		var statusText = '';
		var link = '';

		if (data.event == undefined) {
			switch (data.status) {
				case 'new':
					typeOption = 'alert';
					statusText = 'Статус Вашей заявки №{code} успешно изменён на "Новая"';
					break;
				case 'in-progress':
					typeOption = 'info';
					statusText = 'Статус Вашей заявки №{code} успешно изменён на "В обработке"';
					break;
				case 'completed':
					typeOption = 'success';
					statusText = 'Статус Вашей заявки №{code} успешно изменён на "Завершена"';
					break;
				case 'failed':
					typeOption = 'error';
					statusText = 'Статус Вашей заявки №{code} успешно изменён на "Ошибочная"';
					break;
				default: break;
			}
		} else {
			switch (data.event) {
				case 'change_status':
					typeOption = 'info';
					statusText = 'Пожалуйста, откройте страницу статуса операции Вашей заявки №{code}, для Вас там важная информация!';
					link = {
						href: '/order/status/' + data.code,
						text: 'Открыть</a>'
					};
					break;
				case 'verify_card_approved':
					typeOption = 'success';
					statusText = 'Ваша карта верифицирована! Желаем вам выгодных обменов!';
					break;
				case 'verify_card_rejected':
					typeOption = 'error';
					statusText = 'Верификация карты отклонена, для решения ситуации обратитесь пожалуйста в online-чат нашего сервиса!';
					break;
				default: break;
			}
		}

		if (data.code !== undefined) {
			statusText = statusText.replace('{code}', data.code);
		}
		if (link) {
			statusText = statusText + ' <a href="' + link.href + '" style="color: white; text-decoration: underline">' + link.text + '</a>';
		}

		var notyObj = $.extend({}, notyOptions, {
			type: typeOption,
			layout: layoutOption,
			text: statusText,
			timeout: 15000,
		});

		/*//if (data.event == undefined) {
			notyObj.sounds = {
				sources: ['status_notification.wav'],
				volume: 0.7,
				conditions: ['docHidden']
			};
		//}*/

		var audio = document.getElementById('notification_audio');
			audio.volume = 0.7;
			audio.play();

		new Noty(notyObj).show();

		if (data.event === 'verify_card_approved' || data.event === 'verify_card_rejected') {
			setTimeout(function () {
				location.reload();
			}, 2000);
		}

		/*if (data.event == undefined) {
			var audio = document.getElementById('notification_audio');
			audio.volume = 0.7;
			audio.play();
		}*/

	});

})
</script>
