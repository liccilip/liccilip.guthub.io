<script>
	var tourNextPage = changeAction(1) + '?multipage=true';
	function changeAction(is_return = 0)
	{
		var sellCode = document.getElementById('exchange-ddl-from').dataset.code;
		var buyCode = document.getElementById('exchange-ddl-to').dataset.code;
		var sellAmount = document.getElementById('orderform-sell_amount').value;
		var action = document.getElementById('index-calculate').action;
		if (action.indexOf('-to-') !== -1) {
			document.getElementById('index-calculate').action = action.substring(0, action.lastIndexOf('/')) + '/' + sellCode + '-to-' + buyCode;
		} else {
			document.getElementById('index-calculate').action = document.getElementById('index-calculate').action + '/' + sellCode + '-to-' + buyCode;
		}
		if (is_return) {
			return document.getElementById('index-calculate').action;
		}
		return false;
	}
</script>
